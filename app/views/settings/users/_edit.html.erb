<%= form_for @user, url: settings_user_path(@user), method: :put do |f| %>
  <h3>Edit User</h3>
  <hr class="style4" style="margin: 5px 0 5px 0">
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <label>Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="col-md-6">
        <label>Email</label>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
      <label>
        Administrator
        <%= f.check_box :administrator %>
      </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-primary pull-right"%>
  </div>
<% end %>