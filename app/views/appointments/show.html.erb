<div class="panel panel-default">
	<div class="panel-heading">
		<%= @appointment.name %> | 
		<%- if @appointment.scout_date.present? %>
			<%= @appointment.scout_date.strftime('%b %e, %Y') %>
		<%- else %>
			N/A
		<% end %>
		<div class="pull-right">
			<%= render partial: "shared/appointments/edit_buttons", locals: {appointment: @appointment} %>
		</div>	
	</div>

	<div class="panel-body">
		<div class="strong">
			Notes:
			<%= @appointment.notes %>
		</div>
		<div class="strong">
			Styles:
			<%= link_to "Add New Style", new_appointment_style_path(@appointment), class: "pull-right", remote: true %>
		</div>
		<ul class='list-group'>
			<li class="list-group-item table-header">
				<div class="row">
					<div class="col-sm-3">
						Vendor Style Number
					</div>
					<div class="col-sm-3">
						Category
					</div>
					<div class="col-sm-3">
						Delivery Date
					</div>
					<div class="col-sm-2">
						IMU %
					</div>
					<div class="col-sm-1">
					</div>
				</div>
			</li>
			<%- @appointment.styles.each do |style| %>
				<li class='list-group-item' > 
					<div class="row">
						<div class="col-sm-3">
							<a class='btn-block appointment-container-toggle' data-toggle="collapse" data-target="#style-notes-metadata-<%= style.id %>">
								<%= style.vendor_style_number %>
								<span class="pull-right">
									<i class="fa fa-arrow-circle-down"> </i>
								</span>
							</a>
						</div>
						<div class="col-sm-3">
							<%= style.category_name.titleize %>
						</div>
						<div class="col-sm-3">
							<%= style.delivery_date %>
						</div>
						<div class="col-sm-2">
							<%= number_to_percentage(style.initial_mark_up, precision: 2) if style.initial_mark_up > 0 %>
						</div>
						<div class="col-sm-1">
							<%= render partial: "shared/styles/edit_buttons", locals: {appointment: @appointment, style: style} %>
						</div>
					</div>
					<div class="collapse" id="style-notes-metadata-<%= style.id %>" >
						<div class="row">
							<div class="col-sm-12">
								Notes: <%= style.notes.present? ? style.notes : "n/a" %>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<%= link_to "View Style", appointment_style_path(@appointment, style) %>
							</div>
						</div>
					</div>
				</li>
			<% end %>	
		</ul>
		<div>
			
		</div>
	</div>
</div>
