<div class="panel panel-default">
	<div class="panel-heading">
		<%= @appointment.name %>
		<div class="pull-right">
			<%= render partial: "shared/appointments/edit_buttons", locals: {appointment: @appointment} %>
		</div>	
	</div>

	<div class="panel-body">
		<div class="strong">
			Styles:
			<%= link_to "Add New Style", new_appointment_style_path(@appointment), class: "pull-right", remote: true %>
		</div>
		<ul class='list-group'>
			<li class="list-group-item table-header">
				<div class="row">
					<div class="col-sm-3">
						Name
					</div>
					<div class="col-sm-3">
						Category
					</div>
					<div class="col-sm-3">
						Vendor Style Number
					</div>
					<div class="col-sm-3">
					</div>
				</div>
			</li>
			<%- @appointment.styles.each do |style| %>
				<li class='list-group-item' > 
					<div class="row">
						<div class="col-sm-3">
							<%= link_to style_name_helper(style), appointment_style_path(@appointment, style) %>
						</div>
						<div class="col-sm-3">
							<%= style.category.name %>
						</div>
						<div class="col-sm-3">
							<%= style.vendor_style_number %>
						</div>
						<div class="col-sm-3">
							<%= link_to "Edit", edit_appointment_style_path(@appointment, style), class: "pull-right" %>
						</div>
					</div>
				</li>
			<% end %>	
		</ul>
		<div>
			
		</div>
	</div>
</div>
