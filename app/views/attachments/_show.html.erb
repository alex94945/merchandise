<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <div id="attachment-carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <%- @style.attachments.length.times do |i| %>
            <li data-target="#attachment-carousel" data-slide-to="<%=i%>" class="<%= 'active' if i == 0 %>"></li>
          <% end %> 
        </ol>
        <div class="carousel-inner" role="listbox">
          <%- @style.attachments.each_with_index do |attachment, i| %>
            <div class="item <%= 'active' if i == 0 %>">
              <%= image_tag attachment.photo.url('large') %>
            </div>
          <% end %>
        </div>
        <a class="left carousel-control" href="#attachment-carousel" role="button" data-slide="prev">
          <span class="fa fa-arrow-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#attachment-carousel" role="button" data-slide="next">
          <span class="fa fa-arrow-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
