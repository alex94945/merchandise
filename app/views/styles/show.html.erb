<div class="panel panel-default">
	<ul class="panel-heading breadcrumb">
		<li><%= link_to @appointment.name, appointment_path(@appointment) %></li>
		<li class="active"><%= style_name_helper(@style) %></li>
	</ul>
	<div class="panel-body">
		<div class="row form-group">
			<div class="col-md-4">
				Vendor Style Number:
				<code>
					<%= @style.vendor_style_number %>
				</code>
			</div>
			<div class="col-md-4">
				Vendor Style Name:
			</div>
			<div class="col-md-4">
				Category:
				<%= @style.category.name %>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-md-4">
				Cost
				<%= number_to_currency @style.wholesale_cost %>
			</div>
			<div class="col-md-4">
				Negotiated Cost
				<%= number_to_currency @style.negotiated_cost %>
			</div>
			<div class="col-md-4">
				Retail Price
				<%= number_to_currency @style.retail_price %>
			</div>
		</div>
		<hr>
		<hr>
	</div>
</div>