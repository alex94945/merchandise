<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				Enter New Style for 
				<%= @appointment.name %>
			</div>
			<div class="panel-body">
				<%= form_for @style, url: appointment_styles_path(@appointment), method: :post do |f| %>

					<div class="form-group">
						<label>Style Name</label>
						<%= f.text_field :name, :placeholder => 'ex: G-strang', :class => 'form-control' %>
					</div>

					<%= f.submit %>
				<% end %>
			</div>
		</div>
	</div>
</div>