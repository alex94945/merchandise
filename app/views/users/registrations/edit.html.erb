<h3> Account Status: <%= current_user.payment_account.try(:status).humanize %></h3>
<hr>
<h3>Edit <%= resource_name.to_s.humanize %> Info</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class='row form-group'>
    <div class='col-md-6'>
      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class='row form-group'>
    <div class='col-md-6'>
      <%= f.label :email, class: 'control-label' %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='row form-group'>
    <div class='col-md-6'>
      <%= f.label :password, class: 'control-label' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class='row form-group'>
    <div class='col-md-6'>
      <%= f.label :password_confirmation, class: 'control-label' %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class='row form-group'>
    <div class='col-md-6'>
      <%= f.label :current_password, class: 'control-label' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class='actions'>
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  </div>
<% end %>

<br>
<hr>

<h3>Cancel account?</h3>

<p><%= button_to 'Cancel my account', registration_path(resource_name), class: 'btn btn-danger', data: { confirm: 'Are you sure you want to cancel?' }, method: :delete %></p>
<br>
<%= link_to 'Back', :back, class: 'btn btn-default' %>
