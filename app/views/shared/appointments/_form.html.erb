<div class="row form-group">
	<div class="col-sm-6">
		<label>Vendor Name</label>
		<%= form.text_field :name, :placeholder => 'ex: Appointment Name', :class => 'form-control', :required => true%>
	</div>
	<div class="col-sm-6">
		<label>Buyer</label>
		<%= form.text_field :buyer, :placeholder => 'ex: Buyer', :class => 'form-control', :required => true%>
	</div>
</div>
<div class="row form-group"> 
	<div class="col-sm-6">
		<label>Scout Date</label>
		<%= form.text_field :scout_date, :class => 'form-control', :required => true %>
	</div>
	<div class="col-sm-6">
		<label>Location</label>
		<%= form.text_field :location, :class => 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= form.submit %>
</div>

<script>
$(document).ready(function() {
    $( "#appointment_scout_date" ).datepicker({
    	  dateFormat: "yy-mm-dd"
    });
  });
</script>