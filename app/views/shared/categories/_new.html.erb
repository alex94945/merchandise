  <%= form_for category, url: categories_path, method: :post do |f| %>
    <h3>New Category</h3>
    <hr class="style4" style="margin: 5px 0 5px 0">
    <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
  <% end %>