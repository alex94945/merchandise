  <%= form_for @category, url: category_path(@category), method: :put do |f| %>
    <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= link_to "Delete Category", category_path(@category), method: :delete %>
        <%= f.submit %>
      </div>
      
  <% end %>
  