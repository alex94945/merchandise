  <%= form_for @category, url: category_path(@category), method: :put do |f| %>
    <h3>Edit Category</h3>
    <hr class="style4" style="margin: 5px 0 5px 0">
    <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= link_to "Delete", category_path(@category), class: "btn btn-default", method: :delete %>
        <%= f.submit "Update", class: "btn btn-primary pull-right"%>
      </div>
  <% end %>
  