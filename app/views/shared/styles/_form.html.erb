<div class="row form-group">
	<div class="col-sm-6">
		<label>Vendor Style Number</label>
		<%= form.text_field :vendor_style_number, class: 'form-control', :required => true %>
	</div>
	<div class="col-sm-6">
		<label>Category</label>
		<%= form.select :category_id, options_for_select( Category.all.map{ |c| [c.name, c.id] }, @style.category), { }, class: 'form-control' %>
	</div>
</div>
<div class="row form-group"> 
	<div class="col-sm-6">
		<label>Style Name</label>
		<%= form.text_field :name, placeholder: 'ex: Style Name', :class => 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= form.submit %>
</div>