%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}= current_company.name
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to "New Appointment", new_appointment_path, remote: true
        %li
          = link_to "All Appointments", appointments_path
        %li
          = link_to "All Styles", styles_path
      %ul.nav.navbar-nav.navbar-right
        %li
          - if current_user.administrator?
            = link_to "Admin Settings", settings_path
        %li.dropdown
          %a#user-name-dropdown.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = current_user.name
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "Edit Account", edit_user_registration_path
            %li
              = link_to "Manage Budget", budgets_path
            %li
              = link_to "Contact Us", contact_path
            %li.divider{:role => "separator"}
            %li
              = link_to "Log Out", destroy_user_session_path, method: :delete
    / /.navbar-collapse
  / /.container-fluid
